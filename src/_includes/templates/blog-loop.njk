<!-- blog-loop.njk -->
<li class="{{ class_name }}">
  <a class="w-100" href="{{ post.url }}">
    <article class="mb-24">


      <div class="article-img rad-24 ar-16-9 bg-light align-center p-relative">
        {% if post.data.image %}
        <img class="video-cover " width="100%" height="100%"  src="/assets/static/images/blog/{{ post.data.image }}"
          alt="{{ post.data.imageAlt or post.data.title }}">
        {% else %}
        <div class="fluid-9-b">Bast√©</div>
        {% endif %}
      </div>
      <div class="article-text">


        <div class="mt-16 mb-16">
          {% for tag in post.data.tags %}
          <div class=" tag-info ">
            {{ tag }}
          </div>
          {% endfor %}
        </div>


        <a href="{{ post.url }}"> <h3 class="p5-m c-prima mb-16">{{ post.data.title }}</h3> </a>
     
        <h3 class="text-10-r ttu mb-16 c-accent "> {{ post.date | formatearFecha }} </h3>
  
        

        <p class="mb-24">{{ post.data.description }}</p>
     
      </div>
    </article>
  </a>
</li>