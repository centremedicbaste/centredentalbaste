<!-- blog-loop.njk -->
<li class="{{ class_name }}">
  <a class="w-100" href="{{ post.url }}">
    <article class="mb-24">
      <div class="article-img rad-24 ar-16-9 bg-light align-center p-relative">
        {% if post.data.image %}
        <img class="video-cover " width="100%" height="100%"  src="/assets/static/images/blog/{{ post.data.image }}"
          alt="{{ post.data.imageAlt }}" class="h1">
        {% else %}
        <div class="fluid-9-b">Boilerplate titulo</div>
        {% endif %}
      </div>
      <div class="article-text mt-24">
        <h3 class="fluid-8-r"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <h3 class="fluid-9-r"><a href="{{ post.url }}">{{ post.data.subtitle }}</a></h3>
        
        {% for tag in post.data.tags %}
        <div class=" tag-info ">
          {{ tag }}
        </div>
        {% endfor %}
        <p class="mb-24">{{ post.data.description }}</p>
        <a href="{{ post.url }}" class="btn link-line">Leer m√°s</a>
      </div>
    </article>
  </a>
</li>