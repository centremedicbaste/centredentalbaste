{% if colorHeader == 'has-light-menu' %}
    {% set headerBackground = 'background-color: white;' %}
{% else %}
    {% set headerBackground = '' %}
{% endif %}

<header style="{{ headerBackground }}">
    <div id="menu-white">
        <div class="container-global mx-auto w-100">
            <a class="link logo simple" href="/">
                <div class="logo-simple">
                    <img width="150px" src="/assets/static/images/logos/logo.png" alt="Centre Dental Basté - Logo">
                </div>
            </a>
        </div>
    </div>

    <div id="menu-fixed">
        <div class="menu-fixed-inner ">
            <button id="menu-toggle" class="btn" type="button" aria-label="Abrir menú" aria-expanded="false" aria-controls="menu-mobile-wrap">
                    <svg width="22" height="16" viewBox="0 0 22 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect y="0.599976" width="22" height="1" rx="0.5" fill="#ffffff"/>
                        <rect y="7.19995" width="22" height="1" rx="0.5" fill="#ffffff"/>
                        <rect y="13.7999" width="22" height="1" rx="0.5" fill="#ffffff"/>
                    </svg>
            </button>
            <ul class="menu-desktop list-clear list-inline">
                {% set sortedPages = collections.pages | sort(attribute='data.orden') %}
                {% for page in sortedPages %}
                    {% if page.data.seccion and page.data.seccion != 'home' %}
                        <li class="{% if page.data.seccion == 'Tratamientos' %}menu-item-has-children{% endif %}">
                            <a href="{{ page.url }}">
                                <span>{{ page.data.seccion }}</span>
                            </a>
                            {% if page.data.seccion == 'Tratamientos' %}
                            <ul class="submenu">
                                {% for tratamiento in collections.tratamientos %}
                                    {% if tratamiento.data.seccion %}
                                    <li>
                                        <a href="{{ tratamiento.url }}">
                                            <span>{{ tratamiento.data.seccion }}</span>
                                        </a>
                                    </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                            {% endif %}
                        </li>
                    {% endif %}
                {% endfor %}
                <li>
                <button class="link_a_contacta btn btn-primary"  data-scroll-to>CONTACTA</button>
                </li>
            </ul>
        </div>
    </div>
</header>

<div class="menu-mobile-wrap" id="menu-mobile-wrap" role="dialog" aria-label="Menú de navegación">
    <button class="btn link_cierre" type="button" aria-label="Cerrar menú">
        <svg width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg" transform="rotate(45)">
            <rect x="9.9" width="1" height="22" fill="#1E1E1E"/>
            <rect y="9.9" width="22" height="1" fill="#1E1E1E"/>
        </svg>
    </button>
    <ul class="menu-mobile-list list-clear pl-body pr-body ptr-64 fluid-7-r ttu">
        {% set sortedPages = collections.pages | sort(attribute='data.orden') %}
        {% for page in sortedPages %}
            {% if page.data.seccion and page.data.seccion != 'home' %}
                {% if page.data.seccion == 'Tratamientos' %}
                <li class="menu-mobile-item-has-children pb-16">
                    <button type="button" class="menu-mobile-toggle" aria-expanded="false" aria-controls="menu-mobile-tratamientos" data-menu-mobile-toggle>
                        <span>{{ page.data.seccion }}</span>
                        <svg class="menu-mobile-chevron" width="12" height="12" viewBox="0 0 12 12" fill="none" aria-hidden="true"><path d="M2.5 4.5L6 8l3.5-3.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
                    </button>
                    <ul id="menu-mobile-tratamientos" class="menu-mobile-submenu list-clear" aria-hidden="true">
                        {% for tratamiento in collections.tratamientos %}
                            {% if tratamiento.data.seccion %}
                            <li class="menu-mobile-submenu-item">
                                <a href="{{ tratamiento.url }}">{{ tratamiento.data.seccion }}</a>
                            </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </li>
                {% else %}
                <li class="pb-16">
                    <a href="{{ page.url }}"><span>{{ page.data.seccion }}</span></a>
                </li>
                {% endif %}
            {% endif %}
        {% endfor %}
        <li class="menu-mobile-contacta pb-16">
            <button type="button" class="link_a_contacta btn btn-primary" data-scroll-to>CONTACTA</button>
        </li>
    </ul>
</div>

<div class="menu-mobile-overlay"></div>

